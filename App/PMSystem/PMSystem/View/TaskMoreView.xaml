<Window x:Class="PMSystem.View.TaskMoreView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMSystem.View"
        mc:Ignorable="d"
        Title="TaskMoreView" Height="450" Width="800">
    <StackPanel Margin="10">

        <TextBlock Text="{Binding TaskName}" FontWeight="Bold" FontSize="20"/>

        <TextBlock Text="{Binding TaskDescription}" FontSize="14" Margin="0,0,0,10"/>



        <TextBox Width="250" Height="100" Margin="0,0,0,10" 

                 />

        <Button Content="Save Notes" Width="80" Height="30" 

                />

    </StackPanel>
</Window>
