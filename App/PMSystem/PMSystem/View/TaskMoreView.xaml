<Window x:Class="PMSystem.View.TaskMoreView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource TaskMorePageTitle}" Height="400" Width="600"
        Background="#f0f2f5" WindowStartupLocation="CenterScreen" 
       >

    <Border Background="White" CornerRadius="10" Margin="10" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="{Binding TaskMod.TaskName}" 
                       FontWeight="Bold" FontSize="24" 
                       Foreground="#333333" 
                       Margin="0,0,0,10" 
                       HorizontalAlignment="Center"/>

            <!-- Task Description -->
            <TextBlock Text="{Binding TaskMod.TaskDescription}" 
                       FontSize="16" 
                       Margin="0,0,0,20" 
                       Foreground="#555555" IsEnabled="False"/>
            
            <TextBlock Text="{Binding ResponsibleUser.UserName}" 
            FontSize="16" 
            Margin="0,0,0,20" 
            Foreground="#555555"/>
            <StackPanel Orientation="Horizontal" Name="NewNamePanel" Visibility="Collapsed">
                <TextBlock Text="New Name:" HorizontalAlignment="Left"></TextBlock>
                <TextBox Text="{Binding BindingGroupName,UpdateSourceTrigger=PropertyChanged}"  Width="300" Margin="150,0,0,0" HorizontalAlignment="Right"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Name="NewDescriptionPanel" Visibility="Collapsed">
                <TextBlock Text="New Description: " HorizontalAlignment="Left"></TextBlock>
                <TextBox Text="{Binding Description,UpdateSourceTrigger=PropertyChanged}" Width="300" Margin="150,0,0,0" HorizontalAlignment="Right"></TextBox>
            </StackPanel>
            <!-- Notes Section -->
            <TextBox Text="{Binding Note,UpdateSourceTrigger=PropertyChanged}" Width="Auto" Height="100" 
                     Margin="0,0,0,10" 
                     Padding="10" 
                     Background="White" 
                     BorderBrush="#E0E0E0" 
                     BorderThickness="1" 
                     FontSize="14" 
                     VerticalScrollBarVisibility="Auto"/>

            <!-- Buttons Panel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{DynamicResource SavebuttonTitle}" Width="80" Height="30" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        FontWeight="SemiBold" 
                        Cursor="Hand" 
                        BorderThickness="0" 
                        Margin="0,0,10,0" 
                       
                        Name="SaveButton"/>

                <Button Content="{DynamicResource CancelButtonTitle}" Width="80" Height="30" 
                        Background="#f44336" 
                        Foreground="White" 
                        FontWeight="SemiBold" 
                        Cursor="Hand" 
                        BorderThickness="0" 
                        Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>